{
  "openapi": "3.0.3",
  "info": {
    "title": "API de Gerenciamento de Alunos",
    "description": "API REST para gerenciar alunos com operações de criação e listagem",
    "version": "1.0.0",
    "contact": {
      "name": "Suporte da API",
      "email": "suporte@exemplo.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/students": {
      "post": {
        "summary": "Criar novo aluno",
        "description": "Cria um novo aluno no sistema. Verifica se já existe um aluno com o mesmo email ou CPF.",
        "tags": ["Alunos"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateStudentRequest"
              },
              "example": {
                "name": "João Silva",
                "email": "joao.silva@exemplo.com",
                "cpf": "12345678901"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Aluno criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateStudentResponse"
                },
                "example": {
                  "id": 1
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos fornecidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "ValidationError",
                  "message": "Dados de entrada inválidos"
                }
              }
            }
          },
          "409": {
            "description": "Aluno já existe",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "email_exists": {
                    "summary": "Email já existe",
                    "value": {
                      "error": "StudentEmailAlreadyExistsError",
                      "message": "Student with email joao.silva@exemplo.com already exists"
                    }
                  },
                  "cpf_exists": {
                    "summary": "CPF já existe",
                    "value": {
                      "error": "StudentCpfAlreadyExistsError",
                      "message": "Student with CPF 12345678901 already exists"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar alunos",
        "description": "Lista alunos com filtros opcionais por nome, email ou CPF. Se nenhum filtro for fornecido, retorna todos os alunos.",
        "tags": ["Alunos"],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Filtrar por nome do aluno",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "João Silva"
          },
          {
            "name": "email",
            "in": "query",
            "description": "Filtrar por email do aluno",
            "required": false,
            "schema": {
              "type": "string",
              "format": "email"
            },
            "example": "joao.silva@exemplo.com"
          },
          {
            "name": "cpf",
            "in": "query",
            "description": "Filtrar por CPF do aluno",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^[0-9]{11}$"
            },
            "example": "12345678901"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de alunos retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Student"
                  }
                },
                "examples": {
                  "todos_alunos": {
                    "summary": "Todos os alunos",
                    "value": [
                      {
                        "id": 1,
                        "name": "João Silva",
                        "email": "joao.silva@exemplo.com",
                        "cpf": "12345678901"
                      },
                      {
                        "id": 2,
                        "name": "Maria Santos",
                        "email": "maria.santos@exemplo.com",
                        "cpf": "98765432100"
                      }
                    ]
                  },
                  "lista_vazia": {
                    "summary": "Nenhum aluno encontrado",
                    "value": []
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/students/{id}": {
      "delete": {
        "summary": "Deletar aluno",
        "description": "Remove um aluno do sistema pelo seu ID. Retorna erro 404 se o aluno não encontrado.",
        "tags": ["Alunos"],
        "parameters": [
          {
            "name": "id",
            "in": "path", 
            "description": "ID único do aluno a ser deletado",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "example": 1
          }
        ],
        "responses": {
          "204": {
            "description": "Aluno deletado com sucesso"
          },
          "404": {
            "description": "Aluno não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "StudentNotFoundError",
                  "message": "Student with id 1 not found"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Student": {
        "type": "object",
        "required": ["name", "email", "cpf"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único do aluno (gerado automaticamente)",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Nome completo do aluno",
            "minLength": 1,
            "maxLength": 100,
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do aluno (deve ser único)",
            "example": "joao.silva@exemplo.com"
          },
          "cpf": {
            "type": "string",
            "pattern": "^[0-9]{11}$",
            "description": "CPF do aluno (11 dígitos, deve ser único)",
            "example": "12345678901"
          }
        }
      },
      "CreateStudentRequest": {
        "type": "object",
        "required": ["name", "email", "cpf"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome completo do aluno",
            "minLength": 1,
            "maxLength": 100,
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do aluno (deve ser único)",
            "example": "joao.silva@exemplo.com"
          },
          "cpf": {
            "type": "string",
            "pattern": "^[0-9]{11}$",
            "description": "CPF do aluno (11 dígitos, deve ser único)",
            "example": "12345678901"
          }
        }
      },
      "CreateStudentResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do aluno criado",
            "example": 1
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["error", "message"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Nome da classe do erro",
            "example": "StudentEmailAlreadyExistsError"
          },
          "message": {
            "type": "string",
            "description": "Mensagem descritiva do erro",
            "example": "Student with email joao.silva@exemplo.com already exists"
          },
          "details": {
            "description": "Detalhes adicionais do erro (opcional)",
            "example": null
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Alunos",
      "description": "Operações relacionadas ao gerenciamento de alunos"
    }
  ]
}
